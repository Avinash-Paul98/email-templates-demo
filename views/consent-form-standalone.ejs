        margin-top: 12px;
        width: 100%;
        border-radius: 8px;
        background-color: #fafaf9;
      }

      .section-title {
        margin-bottom: 16px;
        color: #93763C;
        font-size: 12px;
        font-weight: 600;
        line-height: 22px;
      }

      .section-content {
        width: 100%;
      }

      /* Detail Row Styles */
