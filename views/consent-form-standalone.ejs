        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        align-items: center;
        width: 100%;
      }

      .question-label {
        display: flex;
        gap: 10px;
        align-items: center;
        min-width: 240px;
        flex: 1;
        color: #0f172a;
        font-size: 12px;
        font-weight: 500;
        line-height: 1.25;
